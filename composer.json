{
    "name": "sofascore/purgatory",
    "description": "Library for easy construction of cache purge requests.",
    "type": "library",
    "autoload": {
        "psr-4": {
            "SofaScore\\Purgatory\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "doctrine/orm": "^2.8",
        "symfony/config": "^4.4 || ^5.3",
        "symfony/dependency-injection": "^4.4 || ^5.3",
        "symfony/expression-language": "^4.4 || ^5.3",
        "symfony/http-kernel": "^4.4 || ^5.3",
        "symfony/property-access": "^4.4 || ^5.3",
        "symfony/routing": "^4.4 || ^5.3",
        "symfony/serializer": "^4.4 || ^5.3"
    },
    "require-dev": {
        "mheap/phpunit-github-actions-printer": "^1.5",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "psalm": "psalm",
        "test": "phpunit"
    },
    "authors": [
        {
            "name": "SofaScore backend",
            "email": "server@sofascore.com"
        }
    ],
    "license": "MIT"
}
